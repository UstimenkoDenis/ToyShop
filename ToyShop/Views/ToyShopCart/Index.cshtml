@model ToyShopCartViewModel
<div class="container">
    @foreach (var el in Model.toyShopCart.listToyShopItems)
    {
        <div>
            <b>Игрушка:</b>@el.toy.name<br />
            <b>Цена:</b>@el.toy.price.ToString("c")
        </div>
    }
    <hr />
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Оплатить</a>
</div>