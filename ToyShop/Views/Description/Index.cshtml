@model DescriptionViewModel

<div class="store__desc">
    <div class="store__desc-row">
        <div class="store__desc-img">
            <img class="store__desc-pic" src="@Model.GetObjectToy.Img" alt="@Model.GetObjectToy.ShortDesc" />
        </div>
        <div store__desc-body>
            <h2 class="store__desc-title">@Model.GetObjectToy.Name</h2>
            <p class="store__desc-price">@Model.GetObjectToy.Price.ToString("c")</p>
            <p class="store__desc-available">@Model.Available</p> 
        </div>
    </div>
    <p class="store__desc-text">@Model.GetObjectToy.LongDesc</p>
</div>