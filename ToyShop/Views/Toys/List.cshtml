@using ToyShop.ViewModels;
@model ToysListViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h2>Все игрушки</h2>
    <h3>@Model.currCategory</h3>
    @{
        foreach(var toy in Model.allToys) {
            <div>
                <h3>Название: @toy.name</h3>
                <p>Цена: @toy.price.ToString("c")</p><br>
            </div>
        };
    }
</body>
</html>
